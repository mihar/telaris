!!! strict
%html
  %head
    %title= yield(:title) || t("head.title")
    
    = stylesheet_link_tag "application"
    =# javascript_include_tag :defaults, "prototype.uploadProgress.js", "lowpro", :cache => true
    = yield :head
  %body{body_attrs}
    #spinner{:style => 'display: none;'}
      Osvežujem 
      = image_tag 'ui/loader.gif'
    #header
      #languages
        .text= t("head.choose_language")
        - I18n.available_locales.each { |l| puts link_to_language l }
      %h1= link_to_span t("head.title"), root_path        
      %h2= link_to_span t("head.subtitle"), root_path        
      = render "layouts/menu"
      #authentication
        - if admin?
          %p.logged_in Prijavljen kot adminstrator
          %p.log_out= link_to "Odjava", session_path, :method => :delete
        - else
          %p.log_in= link_to "Prijava", new_session_path
        

    #content
      = render "shared/flash", :flash => flash
      = yield
      
    #footer
      %p 
        Vse pravice pridržane
        %strong Telaris d.o.o.